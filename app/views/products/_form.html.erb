<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control", :placeholder => "Product name" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <%= f.number_field :amount, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :denomination %>
    <%= f.text_field :denomination, :class => "form-control", :placeholder => "Units"  %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control", :placeholder => "Product Description", :rows => "5"  %>
  </div>

  <div class="form-group">
    <%= f.fields_for :photos, @product.photos do |f_photo| %>
      <%= f_photo.label :image, :class => 'col-sm-12 control-label' do %>
        <label>Add Photos</label>
      <% end %>
      <div class="col-sm-12">
        <%= f_photo.file_field :image, multiple: true, :name=>'product[photos_attributes][][productimage]', :class => 'form-control' %>
      </div>
    <% end %>
  </div>
  <br>

  <div class="form-group">
    <%= f.submit "Add Product", :class => "btn btn-primary" %>
  </div>
<% end %>
